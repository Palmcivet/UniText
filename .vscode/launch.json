{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Serve UniText",
      "program": "${workspaceFolder}/scripts/dev.js",
      "env": {
        "NODE_ENV": "development"
      },
      "outFiles": ["${workspaceFolder}/dist/build/background.js"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Main Process",
      "port": 5861,
      "timeout": 60000,
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/dist/build/background.js"]
    },
    {
      "type": "firefox",
      "request": "launch",
      "name": "Renderer Process",
      "reAttach": true,
      "reloadOnChange": {
        "watch": "${workspaceFolder}/src/renderer/*.js",
        "ignore": "**/node_modules/**"
      },
      "port": 8315,
      "url": "http://localhost:9091/index.html",
      "webRoot": "${workspaceFolder}/src/renderer"
    }
  ],
  "compounds": [
    {
      "name": "Debug UniText",
      "configurations": ["Serve UniText", "Main Process", "Renderer Process"]
    }
  ]
}
